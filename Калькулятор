print ('Введите ваше имя')
print ('Здраствуйте, name') 

q1 = int (input('Введите число 1:'))
q2 = int (input('Введите число 2:'))

v = input ("Выберите действие: (\n +, \n -, \n *, \n /)")
 
if v == 1:
    r = q1 + q2
    p = 'сложение'
    t = p
if v == 2:
    r = q1 - q2
    l = 'вычитание'
    t = l
if v == 3:
    r = float(q1 / q2)
    m = 'деление'
    t = m
if v == 4:
    r = q1 * q2
    n = 'умножение'
    t = n
print ('Результат ',t,' = ',r)
